{
	"scripts": {
		"start:prod": "tsx ./dist/application/main.js",
		"start:dev": "tsx ./src/application/main.ts",
		"start:watch": "tsx watch ./src/application/main.ts",
		"test": "jest",
		"test:watch": "jest --watchAll --runTestsByPath ./tests",
